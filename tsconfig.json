{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "lib": ["dom", "esnext"],
    "types": ["react", "react-native"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "es"],
  "compileOnSave": false
}
